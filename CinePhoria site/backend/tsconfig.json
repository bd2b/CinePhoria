{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "rootDir": "src",
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true,
      "baseUrl": ".",              // ðŸ‘ˆ Important pour que `./` parte de `src/`
    "paths": {
      "*": ["src/*"]             // ðŸ‘ˆ Tous les imports comme 'config/...' deviennent 'src/config/...'
    },
    } ,
    "exclude": ["node_modules"],
    "include": ["src/**/*"]
}